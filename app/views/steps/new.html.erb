<h2>Add a step:</h2>
<%= form_for :step, url: tasklist_steps_path, :method => :POST do  |f| %>
<% if @step.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@step.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @step.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p>
  <%= f.label :step_number, "Step number" %><br>
  <%= f.text_field :step_number %>
</p>
<p>
  <%= f.label :title, "Title" %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  Optional step? <%= f.check_box :optional %>
</p>
<p>
  <%= f.submit %>
</p>

<% end %>
